<Window x:Class="LectorMDB.windows.inputBuscar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LectorMDB.windows"
        mc:Ignorable="d"
        Title="Buscar Texto" Height="150" Width="300" WindowStartupLocation="CenterOwner">
    <StackPanel Margin="10">
        <TextBlock Text="Escribir texto a buscar:" Margin="0,0,0,5"/>
        <TextBox x:Name="txtInput" Margin="0,0,0,10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="75" Margin="0,0,5,0" Click="Button_Click_1"/>
            <Button Content="Cancelar" Width="75" Click="Button_Click" />
        </StackPanel>
    </StackPanel>
</Window>
