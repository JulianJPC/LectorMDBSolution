<Window x:Class="LectorMDB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LectorMDB"
        mc:Ignorable="d"
        Title="LectorMDB" Background="Gray" FontSize="18" 
        WindowStyle="SingleBorderWindow"
        HorizontalAlignment="Center" VerticalAlignment="Center">
    <Window.CommandBindings>
        <CommandBinding Command="Open" Executed="CommandBinding_Executed"/>
        <CommandBinding Command="Close" Executed="CommandBinding_Executed_5" />
        <CommandBinding Command="NextPage" Executed="CommandBinding_Executed_1"/>
        <CommandBinding Command="PreviousPage" Executed="CommandBinding_Executed_2"/>
        <CommandBinding Command="FirstPage" Executed="CommandBinding_Executed_3"/>
        <CommandBinding Command="LastPage" Executed="CommandBinding_Executed_4"/>
    </Window.CommandBindings>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <!-- 0 -->
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <!-- 14 -->
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <!-- 0 -->
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <!-- 4 -->
            <RowDefinition Height="*" />
            <RowDefinition Height="10" />
        </Grid.RowDefinitions>


        <!-- 0 -->
        <DockPanel Margin="0,0,0,0" Grid.Row="0" Grid.ColumnSpan="17" Grid.Column="0">
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_Archivo">
                    <!--
                                    <MenuItem Header="_Abrir" InputGestureText="Q" Command="Open"/>
                                    <MenuItem Header="_Cerrar" InputGestureText="R" Command="Close"/>
                                    -->
                    <MenuItem Header="_Abrir" InputGestureText="" Command="Open"/>
                    <MenuItem Header="_Cerrar" Command="Close"/>
                </MenuItem>
            </Menu>
        </DockPanel>
        <!-- 1 -->
        <Button Content="&lt;&lt;"  Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" Margin="0,0,0,0" Command="FirstPage" />
        <Button Content="&lt;"  Grid.Row="1" Grid.Column="2" HorizontalAlignment="Left" Margin="0,0,0,0" Command="PreviousPage" />
        <TextBox x:Name="numeroH" Grid.Row="1" Grid.Column="3"  Text="0" TextWrapping="Wrap" Width="120" Margin="0,0,0,0" TextAlignment="Center"/>
        <Button Content="&gt;"  Grid.Row="1" Grid.Column="4" HorizontalAlignment="Left" Margin="0,0,0,0" Command="NextPage" />
        <Button Content="&gt;&gt;"  Grid.Row="1" Grid.Column="5" HorizontalAlignment="Left" Margin="0,0,0,0" Command="LastPage" />

        <TextBlock x:Name="textoHojaFinal" Text="/0" Grid.Row="1" Grid.Column="6" TextWrapping="Wrap" Margin="20,0,0,0" />
        <Button x:Name="irAHoja"  Content="Ir a Hoja"  Grid.Row="1" Grid.Column="7" HorizontalAlignment="Left" Margin="20,0,0,0" Click="irAHoja_Click"/>
        <Button x:Name="buscar" Content="Buscar" Grid.Row="1" Grid.Column="8" HorizontalAlignment="Left" Margin="100,0,0,0" Click="buscar_Click"></Button>
        <Button x:Name="fontPlusBoton" Content="L &#x25B2;"  Grid.Row="1" Grid.Column="9" HorizontalAlignment="Left" Margin="20,0,0,0" Click="fontPlusBoton_Click" />
        <Button x:Name="fontLessBoton" Content="L &#x25BC;"  Grid.Row="1" Grid.Column="10" HorizontalAlignment="Left" Margin="20,0,0,0" Click="fontLessBoton_Click" />
        <TextBlock x:Name="fontTamaño" Grid.Column="11" Grid.Row="1" Text="12" Margin="10,0,10,0"/>
        <ComboBox x:Name="fontCombo" Grid.Column="12" Grid.Row="1" Text="12" Margin="10,0,0,0" DropDownClosed="fontCombo_DropDownClosed" KeyDown="fontCombo_KeyDown" KeyUp="fontCombo_KeyUp"/>
        <Button x:Name="printOpen" Content="Imprimir"  Grid.Row="1" Grid.Column="13" HorizontalAlignment="Left" Margin="20,0,0,0" Click="printOpen_Click" />
        <!-- 2 -->
        <TextBlock x:Name="nombreMDB" Grid.Column="1" Grid.Row="2" Text="Archivo..." Margin="20,0,0,0" Grid.ColumnSpan="10"/>
        <!-- 3 -->
        <RichTextBox x:Name="ContenidoMDB" Grid.Column="1" Grid.Row="3" Margin="0,10,0,10"
                    Grid.ColumnSpan="15" Grid.RowSpan="5" IsReadOnly="True"  
                    VerticalScrollBarVisibility="Visible"  HorizontalScrollBarVisibility="Visible"
                    FontFamily="Courier New" FontSize="12">
            <RichTextBox.Resources>
                <Style TargetType="{x:Type Paragraph}">
                    <Setter Property="Margin" Value="0"/>
                </Style>
            </RichTextBox.Resources>
            <RichTextBox.Document>
                <FlowDocument PageWidth="Auto">
                </FlowDocument>
            </RichTextBox.Document>
        </RichTextBox>
    </Grid>
</Window>
